{
  "name": "hextris-ts",
  "version": "2.0.0",
  "description": "Modern hexagonal falling block puzzle game built with TypeScript and Tailwind CSS",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "type-check": "tsc --noEmit",
    "lint": "eslint src --ext .ts",
    "setup:appwrite": "tsx scripts/setup-appwrite.ts",
    "setup:collections": "tsx scripts/setup-collections.ts"
  },
  "keywords": [
    "game",
    "puzzle",
    "hexagon",
    "typescript"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.11.5",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "autoprefixer": "^10.4.17",
    "eslint": "^8.56.0",
    "node-appwrite": "^22.0.0",
    "postcss": "^8.4.33",
    "tailwindcss": "^3.4.1",
    "tsx": "^4.21.0",
    "typescript": "^5.3.3",
    "vite": "^5.0.11"
  },
  "dependencies": {
    "appwrite": "^14.0.1",
    "socket.io-client": "^4.6.1"
  }
}
