{
  "name": "hextris-ts",
  "version": "2.0.0",
  "description": "Modern hexagonal falling block puzzle game built with TypeScript and Tailwind CSS",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "dev:server": "tsx watch server/index.ts",
    "dev:all": "concurrently --names \"API,VITE\" -c \"cyan,yellow\" \"tsx watch server/index.ts\" \"vite\"",
    "build": "vite build",
    "preview": "vite preview",
    "type-check": "tsc --noEmit",
    "lint": "eslint src --ext .ts",
    "setup:appwrite": "tsx scripts/setup-appwrite.ts",
    "setup:collections": "tsx scripts/setup-collections.ts",
    "migrate:difficulty": "tsx scripts/add-difficulty-attribute.ts"
  },
  "keywords": [
    "game",
    "puzzle",
    "hexagon",
    "typescript"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.6",
    "@types/node": "^20.11.5",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "autoprefixer": "^10.4.17",
    "concurrently": "^9.2.1",
    "eslint": "^8.56.0",
    "node-appwrite": "^22.1.0",
    "postcss": "^8.4.33",
    "tailwindcss": "^3.4.1",
    "tsx": "^4.21.0",
    "typescript": "^5.3.3",
    "vite": "^5.0.11"
  },
  "dependencies": {
    "appwrite": "^14.0.1",
    "cors": "^2.8.6",
    "express": "^5.2.1",
    "socket.io": "^4.8.3",
    "socket.io-client": "^4.8.3"
  }
}
